{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDirs": [
      "."
    ],
      "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"]
    }
  },
  "include": [
    "**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
